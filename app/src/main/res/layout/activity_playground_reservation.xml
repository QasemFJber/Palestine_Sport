<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.PlaygroundReservationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:searchIcon="@drawable/search" />

        <EditText
            android:id="@+id/search_for_car"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:elevation="@dimen/_150sdp"
            android:hint="البحث"
            android:inputType="text"
            android:paddingStart="@dimen/_10sdp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/directions"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/directions"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSearch" />

    <ImageView
        android:id="@+id/locations"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/location"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/directions"
        app:layout_constraintEnd_toStartOf="@+id/directions"
        app:layout_constraintTop_toTopOf="@+id/directions" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/heart"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/locations"
        app:layout_constraintEnd_toStartOf="@+id/locations"
        app:layout_constraintTop_toTopOf="@+id/locations" />

</androidx.constraintlayout.widget.ConstraintLayout>